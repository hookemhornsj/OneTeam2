<h1>Listing requests</h1>

<table>
  <thead>
    <tr>
      <th>Request name</th>
      <th>User</th>
      <th>Project</th>
      <th>Status</th>
      <th>Begin date</th>
      <th>End date</th>
      <th>Request description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.request_name %></td>
        <td><%= request.user.last_name %></td>
        <td><%= request.project.project_name %></td>
        <td><%= request.status %></td>
        <td><%= request.begin_date %></td>
        <td><%= request.end_date %></td>
        <td><%= request.request_description %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

